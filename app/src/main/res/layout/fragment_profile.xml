<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.praveen.oauthsampleapplication.ProfileFragment"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="192dp"
            android:id="@+id/profileImage"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:background="@drawable/border" />

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:singleLine="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:id="@+id/profileName" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/imageContainer"
            android:layout_alignBottom="@id/imageContainer"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:alpha="0.87"
                android:text="andja"
                android:paddingBottom="10dp"
                android:id="@+id/profileEmail" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:alpha="0.87"
                android:text="andja"
                android:paddingBottom="10dp"
                android:id="@+id/profileBirthday" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:alpha="0.87"
                android:text="andja"
                android:paddingBottom="10dp"
                android:id="@+id/profileLocation" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:alpha="0.87"
                android:text="andja"
                android:paddingBottom="10dp"
                android:id="@+id/profileConnection" />

        </LinearLayout>

        <TextView
            android:id="@+id/fullProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageContainer"
            android:textSize="17sp"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:singleLine="false"
            android:text="Full Profile at :"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullProfileText"
            android:textSize="17sp"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:singleLine="false"
            android:id="@+id/profileLink" />


    </RelativeLayout>

    </LinearLayout>
